@echo off
REM Windows 快速检查脚本
REM 双击运行或在命令行中执行

echo ========================================
echo 运行提交前检查...
echo ========================================

python scripts\pre_commit.py

if %ERRORLEVEL% NEQ 0 (
    echo.
    echo ========================================
    echo 检查失败！请修复后再提交。
    echo ========================================
    pause
    exit /b 1
) else (
    echo.
    echo ========================================
    echo 检查通过！可以提交。
    echo ========================================
    pause
    exit /b 0
)
